<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="dynamic_snippets_builder.snippets_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-selector=".dynamic_snippet_template">
                <we-select string="Card style" data-apply-to=".card">
                    <we-button data-select-class="bg-dark text-white">Dark</we-button>
                    <we-button data-select-class="">Light</we-button>
                </we-select>
            </div>
        </xpath>
    </template>
</odoo>